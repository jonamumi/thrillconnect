import { View, Text, StyleSheet, Image } from 'react-native';
import { useEffect, useState } from 'react';
import * as FileSystem from 'expo-file-system';

export default function PerfilUsuario() {
  const [usuario, setUsuario] = useState(null);

  useEffect(() => {
    const cargarDatos = async () => {
      const path = FileSystem.documentDirectory + 'usuario.json';
      const contenido = await FileSystem.readAsStringAsync(path);
      setUsuario(JSON.parse(contenido));
    };

    cargarDatos();
  }, []);

  if (!usuario) return <Text>Cargando perfil...</Text>;

  return (
    <View style={styles.container}>
      <Image source={{ uri: usuario.fotoPerfil }} style={styles.imagen} />
      <Text style={styles.nombre}>{usuario.nombre}</Text>
      <Text style={styles.email}>{usuario.email}</Text>
      <Text style={styles.ranking}>🎖 Ranking: {usuario.ranking}</Text>

      <Text style={styles.seccion}>Parques visitados:</Text>
      {usuario.visitados.parques.map((parque, index) => (
        <Text key={index}>🏞 {parque}</Text>
      ))}

      <Text style={styles.seccion}>Montañas rusas:</Text>
      {usuario.visitados.coasters.map((coaster, index) => (
        <Text key={index}>🎢 {coaster}</Text>
      ))}
    </View>
  );
}

const styles = StyleSheet.create({
  container: { padding: 20 },
  imagen: { width: 100, height: 100, borderRadius: 50, marginBottom: 10 },
  nombre: { fontSize: 22, fontWeight: 'bold' },
  email: { fontSize: 16, color: '#555' },
  ranking: { fontSize: 18, marginTop: 10 },
  seccion: { marginTop: 20, fontWeight: 'bold', fontSize: 16 },
});

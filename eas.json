{
  "cli": {
    "version": ">= 3.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "resourceClass": "medium"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "medium"
      },
      "env": {
        "ENVIRONMENT": "preview",
        "API_URL": "https://preview.thrillconnect.com"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "resourceClass": "large"
      },
      "ios": {
        "resourceClass": "large"
      },
      "env": {
        "ENVIRONMENT": "production",
        "API_URL": "https://api.thrillconnect.com"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
